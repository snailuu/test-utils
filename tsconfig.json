{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es6",
      "module":"CommonJS",
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "strict": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declarationDir": "dist/types",
      "outDir": "lib",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": ["src/**/*.ts"],
  }
